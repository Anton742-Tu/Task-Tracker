# ======================================
# Task Tracker - Шаблон переменных окружения
# ======================================
# Скопируйте этот файл в .env и заполните значениями

# Обязательные настройки Django
# ======================================
# DEBUG=True для разработки, False для продакшена
DEBUG=True

# Секретный ключ Django (сгенерируйте новый для продакшена!)
SECRET_KEY=django-insecure-change-this-in-production

# Окружение: development, production, testing
DJANGO_ENVIRONMENT=development

# Разрешенные хосты (через запятую)
ALLOWED_HOSTS=localhost,127.0.0.1

# Настройки базы данных
# ======================================
# Использовать PostgreSQL (True/False)
USE_POSTGRES=True

# PostgreSQL настройки
POSTGRES_DB=task_tracker_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Или используйте DATABASE_URL (альтернатива)
# DATABASE_URL=postgres://user:password@host:port/dbname

# CORS настройки (для фронтенда)
# ======================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Локализация
# ======================================
LANGUAGE_CODE=ru-ru
TIME_ZONE=Europe/Moscow

# Файлы и загрузки
# ======================================
MAX_UPLOAD_SIZE=10485760  # 10MB в байтах

# Email настройки (для продакшена)
# ======================================
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Redis (опционально, для кэширования)
# ======================================
# REDIS_URL=redis://localhost:6379/0

# Sentry (опционально, для мониторинга ошибок)
# ======================================
# SENTRY_DSN=https://your-sentry-dsn

# Дополнительные настройки
# ======================================
# Для продакшена также установите:
# - Реальный SECRET_KEY
# - Настоящие почтовые настройки
# - Настройте ALLOWED_HOSTS для вашего домена
# - Используйте надежные пароли БД
