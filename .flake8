[flake8]
max-line-length = 119
extend-ignore = E203, W503, W504, E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    migrations,
    static,
    media,
    .tox,
    .pytest_cache,
    build,
    dist,
    */node_modules/*,
    frontend/*/dist,
    *.min.js,
    *.min.css
per-file-ignores =
    __init__.py:F401,
    tests/*:S101,
    */migrations/*:F401,
    */settings/*.py:E501
ignore =
    W504,
    E501