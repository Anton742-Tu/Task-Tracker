# ======================================
# ПРОДАКШЕН НАСТРОЙКИ - ШАБЛОН
# ======================================
# НЕ включайте реальные секреты в репозиторий!
# Используйте этот файл как пример

DJANGO_ENVIRONMENT=production
DEBUG=False
SECRET_KEY=set-real-secret-in-deployment
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# База данных
DB_NAME=task_tracker_prod
DB_USER=prod_user
DB_PASSWORD=set-strong-password-here
DB_HOST=postgres
DB_PORT=5432

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-production-bot-token
TELEGRAM_CHAT_IDS={"admin": "your_admin_chat_id"}

# Site
SITE_URL=https://yourdomain.com

# Security
ALLOWED_HOSTS=.yourdomain.com,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://*.yourdomain.com

# Redis (опционально)
REDIS_URL=redis://redis:6379/0
