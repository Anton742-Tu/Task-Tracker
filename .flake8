[flake8]
max-line-length = 119

# Исключаем папку settings из проверки
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    .tox,
    dist,
    build,
    migrations,
    */settings/*,  # ← исключаем ВСЮ папку settings

# Или используем per-file-ignores для конкретных файлов:
per-file-ignores =
    backend/config/settings/__init__.py:F403,F401
    backend/config/settings/development.py:F403,F405
    backend/config/settings/production.py:F403,F405
    backend/config/settings/testing.py:F403,F405
    backend/config/settings/docker.py:F403,F405
